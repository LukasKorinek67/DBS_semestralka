<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" styleClass="mainFxmlClass" stylesheets="@company.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MenuCompanyController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="50.0" top="30.0" />
         </padding>
         <children>
            <HBox prefHeight="20.0" prefWidth="200.0">
               <children>
                  <Label text="Přihlášená firma: " />
                  <Label fx:id="loggedCompany" text="Firma" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Button fx:id="buttonEditProfile" minHeight="40.0" minWidth="300.0" mnemonicParsing="false" onAction="#editProfile" text="Spravovat profil" />
            <Button fx:id="buttonPublishPractice" minHeight="40.0" minWidth="300.0" mnemonicParsing="false" onAction="#publishPractice" text="Zveřejnit praxi" />
            <Button fx:id="buttonMyPractices" minHeight="40.0" minWidth="300.0" mnemonicParsing="false" onAction="#displayMyPractices" text="Moje praxe" />
            <Hyperlink fx:id="logoutLink" onAction="#logout" text="Odhlásit se" />
         </children>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" layoutX="20.0" layoutY="20.0" prefHeight="40.0" prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label text="DBS - Semestrální práce - Böhm, Kořínek, Rubeš" />
         </children>
         <padding>
            <Insets bottom="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
