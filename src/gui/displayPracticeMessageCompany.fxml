<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" styleClass="mainFxmlClass" stylesheets="@company.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="gui.DisplayPracticeMessageCompanyController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" top="30.0" />
         </padding>
         <children>
            <HBox prefHeight="20.0" prefWidth="200.0">
               <children>
                  <Label text="Přihlášená firma: " />
                  <Label fx:id="loggedCompany" text="Firma" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Label fx:id="title" text="Písemná zpráva z praxe">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="message" maxHeight="100.0" maxWidth="1.7976931348623157E308" minHeight="100.0" minWidth="400.0" prefHeight="100.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </TextArea>
            <Line endX="656.5" startX="-100.0" />
            <Label text="Stáhnout zprávu z praxe do PDF:" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <GridPane hgap="5.0" prefHeight="73.0" prefWidth="700.0" vgap="20.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Vyberte, kam chcete soubor stáhnout:" />
                        <Label text="Zadejte název souboru:" GridPane.rowIndex="1" />
                        <TextField fx:id="pdfFileName" promptText="Název souboru" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1">
                           <children>
                              <Button fx:id="buttonSelectDirectory" mnemonicParsing="false" onAction="#selectDirectory" text="Vybrat umístění" />
                              <Label fx:id="selectedDiretoryPath" text="Vybrané umístění" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
               </children>
            </HBox>
            <Button fx:id="buttonDownloadMessageToPDF" mnemonicParsing="false" onAction="#downloadMessageToPDF" text="Stáhnout zprávu z praxe do PDF" />
            <Label fx:id="errorMessage" text="ErrorMessage" />
            <Hyperlink fx:id="backLink" onAction="#goBack" text="Zpět" />
         </children>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" layoutX="40.0" layoutY="40.0" prefHeight="40.0" prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label text="DBS - Semestrální práce - Böhm, Kořínek, Rubeš" />
         </children>
         <padding>
            <Insets bottom="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
